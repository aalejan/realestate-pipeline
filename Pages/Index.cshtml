@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to Real Estate Pipeline";
}

<div class="min-vh-100 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Header Section -->
                <div class="text-center py-5">
                    <h1 class="display-4 mb-3">Welcome to Real Estate Pipeline</h1>
                    <p class="lead text-muted mb-5">Choose your path to get started</p>
                </div>

                <div class="row g-4">
                    <!-- Agent Card -->
                    <div class="col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center p-5">
                                <div class="mb-4">
                                    <i class="fas fa-user-tie display-4 text-primary"></i>
                                </div>
                                <h2 class="h3 mb-4">Real Estate Agent</h2>
                                <p class="text-muted mb-4">Manage your clients and properties efficiently</p>

                                <div class="d-grid gap-2">
                                    <form method="get" asp-page="/AgentRegistration">
                                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-2">
                                            <i class="fas fa-user-plus me-2"></i>Register as Agent
                                        </button>
                                    </form>

                                    <form method="post" asp-page-handler="DemoLogin">
                                        <button type="submit" class="btn btn-outline-primary btn-lg w-100">
                                            <i class="fas fa-play-circle me-2"></i>Try Demo Account
                                        </button>
                                    </form>
                                </div>

                                <div class="mt-4">
                                    <a href="/AgentLogin" class="text-decoration-none">
                                        <i class="fas fa-sign-in-alt me-1"></i>Already have an account?
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Client Card -->
                    <div class="col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body text-center p-5">
                                <div class="mb-4">
                                    <i class="fas fa-home display-4 text-secondary"></i>
                                </div>
                                <h2 class="h3 mb-4">Home Buyer</h2>
                                <p class="text-muted mb-4">Find your dream home with expert guidance</p>

                                <div class="d-grid gap-2">
                                    <form method="get" asp-page="/ClientRegistration">
                                        <button type="submit" class="btn btn-secondary btn-lg w-100 mb-2">
                                            <i class="fas fa-user-plus me-2"></i>Register as Client
                                        </button>
                                    </form>

                                    <form method="post" asp-page-handler="DemoLoginClient">
                                        <button type="submit" class="btn btn-outline-secondary btn-lg w-100">
                                            <i class="fas fa-play-circle me-2"></i>Try Demo Account
                                        </button>
                                    </form>
                                </div>

                                <div class="mt-4">
                                    <a href="/ClientLogin" class="text-decoration-none text-secondary">
                                        <i class="fas fa-sign-in-alt me-1"></i>Already have an account?
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer Section -->
                <div class="text-center py-5">
                    <p class="text-muted mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Secure registration process • Fast and easy setup
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>