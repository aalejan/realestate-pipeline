@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid" style="height: 100vh;">
    <div class="row h-100 align-items-center">
        <!-- Left Side for Agent -->
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="text-center">
                <h2 class="mb-4">Are You an Agent?</h2>
                <form method="get" asp-page="/AgentRegistration">
                    <button type="submit" class="btn btn-lg btn-outline-primary rounded-pill px-5">I'm an Agent</button>
                </form>
                <p class="mt-3">
                    <a href="/AgentLogin" class="text-primary">Have an agent account?</a>
                </p>
                <form method="post" asp-page-handler="DemoLogin">
                    <button type="submit" class="btn btn-lg btn-outline-primary rounded-pill px-5">Demo Agent Login</button>
                </form>
            </div>
        </div>

        <!-- Right Side for Client -->
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="text-center">
                <h2 class="mb-4">Are You a Client?</h2>
                <form method="get" asp-page="/ClientRegistration">
                    <button type="submit" class="btn btn-lg btn-outline-secondary rounded-pill px-5">I'm a Client</button>
                </form>
                <p class="mt-3">
                    <a href="/ClientLogin" class="text-secondary">Have a client account?</a>
                </p>
            </div>
        </div>
    </div>
</div>
