@page
@model RealEstatePipeline.Pages.ManageClientsModel
@{
}
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Client Name</th>
                <th>Has Found House</th>
                <th>Has Signed Contract</th>
                <th>Is Contacted</th>
                <!-- Add headers for other fields -->
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.SharedClients.Count; i++)
            {
                <tr>
                    <td>
                        @Model.SharedClients[i].ClientRegistration.FirstName @Model.SharedClients[i].ClientRegistration.LastName
                        <input type="hidden" asp-for="ClientUpdates[i].Id" value="@Model.SharedClients[i].SharedClient.Id" />
                    </td>
                    <td>
                        <input type="checkbox" asp-for="ClientUpdates[i].HasFoundHouse" checked="@((Model.SharedClients[i].SharedClient.HasFoundHouse ? "true" : ""))" />

                    </td>
                    <td>
                        <input type="checkbox" asp-for="ClientUpdates[i].HasSignedContract" checked="@((Model.SharedClients[i].SharedClient.HasSignedContract ? "true" : ""))" />
                    </td>
                    <td>
                        <input type="checkbox" asp-for="ClientUpdates[i].IsContacted" checked="@((Model.SharedClients[i].SharedClient.IsContacted ? "true" : ""))" />
                    </td>
                    <!-- Add inputs for other editable fields -->
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
