@page
@model RealEstatePipeline.Pages.Account.ResetPasswordConfirmationModel
@{
}

<h1>Password Reset Successful</h1>

@if (Model.UserType == "Agent")
{
    <p>Agent, your password has been reset successfully.</p>
}
else if (Model.UserType == "Client")
{
    <p>Client, your password has been reset successfully.</p>
}
else
{
    <p>Your password has been reset successfully.</p>
}